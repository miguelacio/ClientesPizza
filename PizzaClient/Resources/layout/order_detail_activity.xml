<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Pizza"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_title_pizza" />
    <TextView
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_title_pizza"
        android:id="@+id/text_view_pizza" />
    <TextView
        android:text="Estado"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_pizza"
        android:id="@+id/text_view_status_pizza" />
    <TextView
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_status_pizza"
        android:id="@+id/text_view_status" />
    <TextView
        android:text="Cliente"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_status"
        android:id="@+id/text_view_title_client" />
    <TextView
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_title_client"
        android:id="@+id/text_view_client" />
    <TextView
        android:text="Direccion"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_client"
        android:id="@+id/text_view_title_address" />
    <TextView
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_title_address"
        android:id="@+id/text_view_address" />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/button_pick_up"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Recoger pedido" />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/button_deliver"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_pick_up"
        android:text="Entregar pedido" />
</RelativeLayout>